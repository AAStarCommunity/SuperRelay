# SuperRelay Environment Configuration Template
# Copy this file to .env and set your actual values

# Network Configuration
NETWORK=dev
# NETWORK=ethereum_sepolia
# NETWORK=ethereum_mainnet

# RPC Endpoint
RPC_URL=http://localhost:8545
# RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Private Keys (comma-separated)
# ⚠️  SECURITY WARNING: Never commit real private keys to version control
# For development only - use test keys from Anvil/Hardhat
SIGNER_PRIVATE_KEYS=your_private_key_1,your_private_key_2

# Alternative: Use key management service
# SIGNER_KMS_KEY_IDS=key_id_1,key_id_2
# AWS_REGION=us-east-1

# Paymaster Configuration
PAYMASTER_ENABLED=true
PAYMASTER_POLICY_FILE=config/paymaster-policies.toml
PAYMASTER_PRIVATE_KEY=your_paymaster_private_key_here

# Database Configuration (for production)
# DATABASE_URL=postgres://username:password@localhost:5432/super_relay

# RPC Server Configuration
RPC_HOST=127.0.0.1
RPC_PORT=3000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=8080

# Logging
RUST_LOG=info